{
  "name": "exam-prep",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:subjects": "jest --testPathPattern=subject",
    "test:get": "jest --testPathPattern=get"
  },
  "keywords": [],
